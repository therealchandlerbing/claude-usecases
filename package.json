{
  "name": "claude-usecases",
  "version": "2.8.0",
  "private": true,
  "description": "Claude AI skills and workflows for specialized business and technical automation",
  "workspaces": [
    "intelligence-dashboard",
    "shared/dashboard-components"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=intelligence-dashboard",
    "build": "npm run build --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:python": "python -m pytest tests/ -v",
    "lint": "npm run lint --workspaces --if-present",
    "type-check": "npm run type-check --workspaces --if-present",
    "clean": "rm -rf node_modules && npm run clean --workspaces --if-present",
    "validate-skills": "python scripts/validate_skill_structure.py --verbose",
    "generate-tests": "python scripts/generate_skill_tests.py",
    "generate-docs": "python scripts/generate_skill_docs.py"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/therealchandlerbing/claude-usecases"
  },
  "keywords": [
    "claude",
    "ai",
    "skills",
    "automation",
    "workflows"
  ],
  "author": "360 Social Impact Studios",
  "license": "MIT"
}
